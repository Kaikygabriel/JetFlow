@using System.Globalization
@model IEnumerable<JetFlow.Web.Product.Entitie.Flight>

@{
var culture = new CultureInfo("pt-BR");
}

<style>
    .flights-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 16px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .flight-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: #ffffff;
        border-radius: 12px;
        padding: 20px 24px;
        margin-bottom: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .flight-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    }

    .flight-info {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

    .flight-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: #111827;
    }

    .flight-location {
        font-size: 0.9rem;
        color: #6b7280;
    }

    .flight-price {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2563eb;
    }

    .empty-state {
        text-align: center;
        color: #6b7280;
        margin-top: 60px;
        font-size: 1rem;
    }
</style>

<div class="flights-container">
    @if (!Model.Any())
    {
    <div class="empty-state">
        ✈️ Nenhum voo disponível no momento
    </div>
    }
    else
    {
    @foreach (var flight in Model)
    {
    <div class="flight-card">
        <div class="flight-info">
            <div class="flight-name">@flight.Name</div>
            <div class="flight-location">
                @flight.FlightCity?.CityStart → @flight.FlightCity?.CityOut
            </div>
        </div>

        <div class="flight-price">
            @flight.Price.ToString("C", culture)
        </div>
    </div>
    }
    }
</div>
