@model JetFlow.Web.Auth.DTOs.LoginDto

@{
ViewData["Title"] = "Login";
}

<style>
    body {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 16px;
    }

    .login-card {
        background: #ffffff;
        width: 100%;
        max-width: 420px;
        padding: 32px;
        border-radius: 16px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
    }

    .login-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 8px;
    }

    .login-subtitle {
        font-size: 0.95rem;
        color: #64748b;
        margin-bottom: 24px;
    }

    .form-group {
        margin-bottom: 16px;
    }

    label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #334155;
        margin-bottom: 6px;
        display: block;
    }

    input {
        width: 100%;
        padding: 12px 14px;
        border-radius: 10px;
        border: 1px solid #cbd5f5;
        font-size: 0.95rem;
        outline: none;
        transition: border 0.2s, box-shadow 0.2s;
    }

    input:focus {
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.2);
    }

    .login-button {
        width: 100%;
        padding: 12px;
        margin-top: 12px;
        border: none;
        border-radius: 10px;
        background: #2563eb;
        color: #ffffff;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s, transform 0.1s;
    }

    .login-button:hover {
        background: #1d4ed8;
        transform: translateY(-1px);
    }

    .login-footer {
        margin-top: 20px;
        text-align: center;
        font-size: 0.85rem;
        color: #64748b;
    }

    .login-footer a {
        color: #2563eb;
        text-decoration: none;
        font-weight: 600;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="login-title">Bem-vindo ðŸ‘‹</div>
        <div class="login-subtitle">Entre com sua conta para continuar</div>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="email"
                       name="Email"
                       placeholder="seu@email.com"
                       required />
            </div>

            <div class="form-group">
                <label>Senha</label>
                <input type="password"
                       name="Password"
                       placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                       required />
            </div>

            <button type="submit" class="login-button">
                Entrar
            </button>
        </form>

        <div class="login-footer">
            NÃ£o tem conta?
            <a href="#">Criar agora</a>
        </div>
    </div>
</div>
